<h2>Book an Appointment:</h2>

<form action='/appointments/new' method="POST"> 
    <ul>
    <li> 
        <label for="date">
        <span>Select Date:</span>
        </label>
        <input class="form-box" type="date" id="date" name="appointment[date]">
    </li>
    <br>
    <li>
        <label for="time">
        <span>Select Time:</span>
        </label>
        <select class="form-box" id="time" name="appointment[time]">
            <option value="10">10:00 am</option>
            <option value="11">11:00 am</option>
            <option value="12">12:00 pm</option>
            <option value="13">1:00 pm</option>
            <option value="14">2:00 pm</option>
            <option value="15">3:00 pm</option>
            <option value="16">4:00 pm</option>
        </select>
    </li>
    <br>
    <li>
        <label for="service_id">
        <span>Select a Service:</span>
        </label>
        <ul>
            <% @services.each do |s| %>
                <li>
                <%= s.name %>
                <input type="radio" name="appointment[service_id]" id="<%= s.id %>"  value="<%= s.id %>">
                </li>
            <% end %>
        </ul>
    </li>

    <br>
    <br>
    <li>
        <input type="submit" class="button champagne" value="Book this appointment!">
    </li>
</form>
